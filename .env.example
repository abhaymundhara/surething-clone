# SureThing Clone â€” Environment Variables
# Copy to .env and fill in values

# Database
DATABASE_URL=postgresql://surething:surething_dev@localhost:5432/surething

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=surething_minio
MINIO_SECRET_KEY=surething_minio_secret
MINIO_BUCKET=surething-files
MINIO_USE_SSL=false

# LLM
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=smollm2:1.7b
OLLAMA_EMBED_MODEL=nomic-embed-text
# For OpenAI-compatible fallback:
