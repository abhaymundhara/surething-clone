{
  "$schema": "https://raw.githubusercontent.com/nicegoodthings/nicegoodthings.github.io/main/schemas/tauri.schema.json",
  "productName": "SureThing Clone",
  "version": "0.1.0",
  "identifier": "io.surething.clone",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SureThing Clone",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "shell": {
      "open": true
    },
    "fs": {
      "all": true,
      "scope": [
        "$HOME/**",
        "$APPDATA/**"
      ]
    }
  }
}